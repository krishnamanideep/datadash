rules_version = '2';

// Firebase Storage Security Rules
service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow anyone to upload and read assembly maps (for testing)
    // TODO: Restrict to authenticated users in production
    match /assembly-maps/{assemblyId}/{fileName} {
      allow read: if true; // Public read access
      allow write: if true; // Allow uploads for testing
    }

    // Allow candidates image uploads
    match /candidates/{fileName} {
      allow read: if true;
      allow write: if true;
    }
    
    // Default: deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
